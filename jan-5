1975. Maximum Matrix Sum
Solution

class Solution:
    def maxMatrixSum(self, nums):
        total = 0
        neg_count = 0
        min_val = float('inf')

        for row in nums:
            for x in row:
                if x < 0:
                    neg_count += 1
                val = abs(x)
                total += val
                min_val = min(min_val, val)

        if neg_count % 2 == 0:
            return total
        return total - 2 * min_val
